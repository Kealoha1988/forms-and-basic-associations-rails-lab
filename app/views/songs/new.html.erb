<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %>

 

  <br /><br>

     <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "Select Genre!" %>
     
    

  <br /><br>

    <%= f.fields_for :artist, Artist.new do |a| %>
    <%= a.label "Artist Name" %> <br>
  <%= a.text_field :name%>
  <% end %>

  <br /><br>

  
    <%= f.fields_for :notes, Note.new do |n| %>
    <%= n.label "Notes_1" %> <br>
  <%= n.text_field :content%>
  <% end %>
  <br><br>
    <%= f.fields_for :notes, Note.new do |n| %>
    <%= n.label "Notes_2" %> <br>
  <%= n.text_field :content%>
  <% end %>

  <br><br>




  <%= f.submit %>
<% end %>


